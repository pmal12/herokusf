<div class="row">
  <div class="col-md-4">
    <div class="depot_form">

    <%= form_for @customer do |f| %>
      <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %>
            prohibited this customer from being saved:</h2>
          <ul>
          <% @customer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <h3>Enter Customer Details</h3>

      <div class="form-group">
      
        <%= f.label :name %>:
        <%= f.text_field :name, size: 40, class: "form-control" %>
      
      </div>

      <div class="form-group">
      
        <%= f.label :password, 'Password' %>:
        <%= f.password_field :password, size: 40, class: "form-control" %>
     
      </div>

      <div class="form-group">
      
        <%= f.label :password_confirmation, 'Confirm' %>:
        <%= f.password_field :password_confirmation, size: 40, class: "form-control" %>
      
      </div>
      
      <div class="form-group">
      <div class="actions">
        <%= f.submit class: "btn btn-primary"%>
      </div>
      </div>
    <% end %>
  </div>
  </div>
</div>

